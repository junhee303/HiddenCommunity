<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_email"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFEEEEEE"
    tools:context="com.example.junhe.hiddencommunity.EmailActivity">

    <!--<ImageView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--app:srcCompat="@drawable/number"-->
    <!--android:id="@+id/img_Number"-->
    <!--android:layout_above="@+id/img_Email"-->
    <!--android:layout_alignParentStart="true"-->
    <!--android:layout_alignParentTop="true" />-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/email"
        android:id="@+id/img_Email"
        android:layout_above="@+id/notice1" />

    <TextView
        android:text="이메일을 확인하여\n인증을 완료해주세요"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notice1"
        android:textSize="18sp"
        android:textColor="#FF434343"
        android:textAlignment="center"
        android:layout_marginBottom="53dp"
        android:layout_above="@+id/input_email"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:id="@+id/input_email"
        android:textSize="16sp"
        android:textColor="#FF66C5D8"
        android:textAlignment="center"
        android:layout_above="@+id/notice2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:text="(으)로 인증 메일이 발송되었습니다"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notice2"
        android:textSize="16sp"
        android:textColor="#FF434343"
        android:textAlignment="center"
        android:layout_above="@+id/bFinish"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />


    <Button
        android:text="인증 완료"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bFinish"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />




</RelativeLayout>


