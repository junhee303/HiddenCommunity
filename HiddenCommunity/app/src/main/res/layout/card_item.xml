<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:elevation="14dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="fill_parent"
            android:layout_height="280dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="제목"
                android:textColorHint="#FFCCCACA"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textColor="#606060"
                />

            <TextView
                android:id="@+id/Author"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="닉네임"
                android:textColorHint="#FFCCCACA"
                android:textColor="#868686"
                />

            <TextView
                android:id="@+id/Date"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="2016-00-00"
                android:textColorHint="#FFCCCACA"
                android:textColor="#868686"
                />

            <TextView
                android:id="@+id/Body"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:ems="10"
                android:hint="내용을 입력하세요"
                android:textColorHint="#FFCCCACA"
                android:textSize="16dp"
                android:textColor="#606060"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/Tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="#태그"
                android:textColorHint="#FFCCCACA"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="#88bec9"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/count_hit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="조회 수"
                    android:textColorHint="#FFCCCACA"/>

                <TextView
                    android:id="@+id/count_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="좋아요 수"
                    android:textColorHint="#FFCCCACA"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/count_hit"
                    android:layout_marginStart="30dp" />

                <TextView
                    android:id="@+id/count_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="댓글 수"
                    android:textColorHint="#FFCCCACA"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/count_like"
                    android:layout_marginStart="29dp" />
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>