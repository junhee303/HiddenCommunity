<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.junhe.hiddencommunity.MajorListActivity">

    <TextView
        android:id="@+id/select_board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="선택된 게시판"
        android:textSize="18dp"
        android:layout_alignParentEnd="true" />


    <TextView
        android:id="@+id/TitleOfWriting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="제목"
        android:textColor="#000000"
        android:textColorHint="#FFCCCACA"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/select_board"/>

    <TextView
        android:id="@+id/Writer"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="글쓴이"
        android:textColorHint="#FFCCCACA"
        android:textColor="#868686"
        android:layout_below="@+id/TitleOfWriting"/>

    <TextView
        android:id="@+id/DateOfWriting"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="2016-00-00"
        android:textColorHint="#FFCCCACA"
        android:textColor="#868686"
        android:layout_below="@+id/Writer"/>

    <TextView
        android:id="@+id/ContentOfWriting"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="내용을 입력하세요"
        android:textColor="#343434"
        android:textColorHint="#FFCCCACA"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="top"
        android:layout_below="@+id/DateOfWriting"/>

    <TextView
        android:id="@+id/TagOfWriting"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:textColor="#88bec9"
        android:textSize="15dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ContentOfWriting"/>

    <FrameLayout
        android:id="@+id/LikeButtonFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TagOfWriting"
        android:layout_alignParentStart="true">
        <Button
            android:text="좋아요 ♥"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:id="@+id/bLikeOn"
            android:layout_below="@+id/TagOfWriting"
            android:background="#f6f6f6"
            android:visibility="invisible"/>
        <Button
            android:text="좋아요 ♡"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:id="@+id/bLikeOff"
            android:layout_below="@+id/TagOfWriting"
            android:background="#f6f6f6"
            android:visibility="visible"/>

    </FrameLayout>

    <TextView
        android:id="@+id/TheNumberOfLike"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="좋아요 수"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/LikeButtonFrame"/>

    <Button
        android:text="댓글 쓰기"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:id="@+id/bAddComment"
        android:background="#f6f6f6"
        android:layout_below="@+id/TagOfWriting"
        android:layout_alignParentEnd="true" />


</RelativeLayout>

