<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:fillViewport="true"
    android:id="@+id/scrollView"
    tools:context="com.example.junhe.hiddencommunity.BoardReadingActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/select_board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="선택된 게시판"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/TitleOfWriting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select_board"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="제목"
            android:textColor="#606060"
            android:textColorHint="#FFCCCACA"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Writer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TitleOfWriting"
            android:layout_marginTop="5dp"
            android:hint="글쓴이"
            android:textColor="#868686"
            android:textColorHint="#FFCCCACA"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/DateOfWriting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Writer"
            android:hint="2016-00-00"
            android:textColor="#868686"
            android:textColorHint="#FFCCCACA"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/ContentOfWriting"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/DateOfWriting"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:gravity="top"
            android:hint="내용을 입력하세요"
            android:textColor="#606060"
            android:textColorHint="#FFCCCACA"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TagOfWriting"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ContentOfWriting"
            android:ems="10"
            android:textColor="#88bec9"
            android:textSize="15dp" />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/LikeButtonFrame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/bLikeOn"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_below="@+id/TagOfWriting"
                android:background="#f6f6f6"
                android:text="좋아요 ♥"
                android:visibility="invisible" />

            <Button
                android:id="@+id/bLikeOff"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_below="@+id/TagOfWriting"
                android:background="#f6f6f6"
                android:text="좋아요 ♡"
                android:visibility="visible" />

        </FrameLayout>

        <Button
            android:id="@+id/bAddComment"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:background="#f6f6f6"
            android:text="댓글 쓰기" />
</RelativeLayout>

        <TextView
            android:id="@+id/TheNumberOfLike"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/LikeButtonFrame"
            android:ems="10"
            android:hint="좋아요 수"
            android:textColor="#606060"
            android:textSize="15dp" />

        <ListView
            android:id="@+id/comment_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="#cecece"
            android:dividerHeight="1px">

        </ListView>


    </LinearLayout>



